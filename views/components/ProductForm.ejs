<head>
    <link rel="stylesheet" href="/productForm.css">
</head>
<form class="product-from" action="<%= action %>" method="POST">
    <div class="input">
        <p>Title</p>
        <input type="text" name="title">
    </div>
    <div class="input">
        <p>Image (max 3)</p>
        <input type="file" multiple id="imageInput" accept="image/jpeg, image/png" name="image">
        <div class="previewImg"></div>
    </div>
    <div class="input">
        <p>Summary</p>
        <input type="text" name="summary">
    </div>
    <div class="input">
        <p>Price</p>
        <input type="number" name="price">
    </div>
    <div class="input">
        <p>Description</p>
        <input type="text" name="desc">
    </div>
    <button class="btn"><%= btnTitle %></button>
</form>

<script>
    const imageInput = document.querySelector("#imageInput")
    const preview = document.querySelector(".previewImg")
    imageInput.addEventListener("change", (e) => {
            const files = Array.from(e.target.files).slice(0, 3);
            preview.innerHTML = "";
            for (const file of files) {
                const reader = new FileReader();

                reader.onload = () => {
                    const imgElement = document.createElement("img");
                    imgElement.src = reader.result;
                    imgElement.classList.add("previewImgItem");
                    preview.appendChild(imgElement);
                };

                reader.readAsDataURL(file);
            }
        })
</script>