<head>
    <link rel="stylesheet" href="/ProductItem.css">
</head>
<div class="productItem">
    <% if(product && product.image){ %>
        <img src="/<%= product && product.image %>" alt="image1">
    <% } else{ %>
        <img src="https://upload.wikimedia.org/wikipedia/commons/1/14/No_Image_Available.jpg" alt="no image found">
    <% } %>
    <div class="text">
        <h3 class="title"><%= product &&  product.title %></h3>
        <% if(user && user.isAdmin){%>
            <form action="/delete-product/<%= product && product._id%>" method="POST" class="adminBtns">
                <a href="/edit-product/<%=  product && product._id %>" class="viewBtn">View and Edit</a>
                <button class="viewBtn">Delete</button>
            </form>
        <% } else{ %>
            <a href="/products/<%=  product && product._id %>" class="viewBtn">View Details</a>
        <% } %>
    </div>
</div> 